{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noBlankTarget": "off",
        "noSvgWithoutTitle": "off",
        "noLabelWithoutControl": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "noUselessSwitchCase": "off",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "useJsxKeyInIterable": "off"
      },
      "style": {
        "noParameterAssign": "warn",
        "noUnusedTemplateLiteral": {
          "level": "error",
          "fix": "safe"
        }
      },
      "suspicious": {
        "noDoubleEquals": {
          "level": "error",
          "fix": "safe",
          "options": {
            "ignoreNull": true
          }
        }
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["**/*.min.js"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  }
}
